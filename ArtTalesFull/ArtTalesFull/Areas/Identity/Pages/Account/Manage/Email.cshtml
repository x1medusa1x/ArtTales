@page
@model EmailModel
@{
    ViewData["Title"] = "Manage Email";
    ViewData["ActivePage"] = ManageNavPages.Email;
}


<partial name="_StatusMessage" for="StatusMessage" />
<div class="changeInfo">
   <div class="changeInfoBackground">
      <div class="container">
         <div class="row people">
            <form id="email-form" method="post">
               <div asp-validation-summary="All" class="text-danger"></div>
               @if (Model.IsEmailConfirmed)
               {
               <span as-for="Email" class="authTitle">Email</span>
               <div class="form-floating input-group" style="padding-bottom: 20px;">
                  <input asp-for="Email" class="form-control authInput" disabled style="margin-right: 10px;"/>
                  <div class="input-group-append">
                     <span class="h-100 input-group-text text-success font-weight-bold authInput">✓</span>
                  </div>

               </div>
               }
               else
               {
               <span as-for="Email" class="authTitle">Email</span>
               <div class="form-floating">
                  <input asp-for="Email" class="form-control authInput" disabled />
                  <button id="email-verification" type="submit" asp-page-handler="SendVerificationEmail" class="btn btn-link">Send verification email</button>
               </div>
               }
               <span as-for="Email" class="authTitle">New Email</span>
               <div class="form-floating">
                  <input asp-for="Input.NewEmail" class="form-control authInput" autocomplete="email" aria-required="true" />
                  <span asp-validation-for="Input.NewEmail" class="text-danger"></span>
               </div>
               <div class="text-center mt-4">
                  <button id="change-email-button" type="submit" asp-page-handler="ChangeEmail" class="btn authButton">Change email</button>
               </div>
            </form>
         </div>
      </div>
   </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
